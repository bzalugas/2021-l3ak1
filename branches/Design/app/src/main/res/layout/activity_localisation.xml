<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".controller.LocalisationActivity">


    <TextView
        android:id="@+id/loc_text_magasin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="MAGASINS À PROXIMITÉ"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/loc_list_view"
        android:layout_width="350dp"
        android:layout_height="489dp"
        android:layout_below="@+id/loc_text_magasin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:divider="@color/white"
        android:padding="10dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loc_text_magasin" />

    <Button
        android:id="@+id/loc_button_add"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:backgroundTint="@color/button"
        android:text="Mon magasin est introuvable"
        app:layout_constraintTop_toBottomOf="@+id/loc_list_view" />

</RelativeLayout>
